<div class="form-group" id="df-thumb-group">
	<label>{{localize 'DF-SCENE-ENHANCE.Thumbnail.Label'}}</label>
	<div class="form-fields">
		<button id="df-thumb-btn" type="button" class="file-picker" data-type="image" data-target="df-thumb-img" title="{{localize 'DF-SCENE-ENHANCE.Thumbnail.Button'}}" tabindex="-1">
			<i class="fas fa-file-import fa-fw"></i>
		</button>
		<input id="df-thumb-img" class="image" type="text" name="df-thumb-img" placeholder="{{localize 'DF-SCENE-ENHANCE.Thumbnail.Hint'}}" value="{{thumbPath}}">
	</div>
</div>