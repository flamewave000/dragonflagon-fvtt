{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Foundry",
			"type": "chrome",
			"request": "launch",
			"port": 9222,
			"url": "http://localhost:30000/game",
			"webRoot": "${workspaceFolder}/dist",
			"runtimeArgs": [
				"--remote-debugging-port=9222",
				"--app=http://localhost:30000"
			]
		},
		{
			"name": "Attach to Foundry",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"url": "http://localhost:30000/game",
			"webRoot": "${workspaceFolder}/dist",
		}
	]
}